{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true ,

    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "examples"
  ],
  "include": [
    "src"
  ]
}
